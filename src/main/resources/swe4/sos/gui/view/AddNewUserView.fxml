<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      prefHeight="400.0" prefWidth="400.0"
      stylesheets="@../css/styles.css"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="swe4.sos.gui.controller.AddNewUserController">

    <Label text="Add new user" />
    <TextField fx:id="usernameField" promptText="Username" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" />
    <Label fx:id="statusLabel" textFill="red"/>
    <Button text="Submit" onAction="#handleSubmitAddNewUser" VBox.vgrow="ALWAYS" styleClass="dynamic-button"/>
    <Button text="Cancel" onAction="#cancelAddNewUser" VBox.vgrow="ALWAYS" styleClass="dynamic-button"/>
</VBox>
