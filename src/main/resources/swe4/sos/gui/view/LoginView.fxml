<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="swe4.sos.gui.controller.LoginController"
      stylesheets="@../css/styles.css"
      spacing="20" alignment="CENTER"
      prefWidth="400" prefHeight="400">

    <Label text="Login"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#handleLogin" VBox.vgrow="ALWAYS" styleClass="dynamic-button"/>
    <Label fx:id="statusLabel" textFill="red"/>
    <Button text="Add new user" onAction="#handleAddNewUser" VBox.vgrow="ALWAYS" styleClass="dynamic-button"/>

</VBox>
