<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="swe4.sos.gui.controller.InviteUserPopupController"
      stylesheets="@../css/styles.css"
      spacing="10">

    <Label text="Invitation key"/>
    <TextField fx:id="joinKeyLabel" editable="false"/>

    <Label text="Invite User by Email" />

    <VBox spacing="5">
        <Label text="Email:" />
        <TextField fx:id="emailField" promptText="Enter user email..." />
    </VBox>

    <HBox spacing="10" alignment="center_right">
        <Button text="Submit" onAction="#handleSubmit" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>

</VBox>